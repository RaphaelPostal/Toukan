{% extends 'base.html.twig' %}
{% trans_default_domain 'form' %}
{% block title %}Inscription{% endblock %}

{% block body %}
    <div>
        <a href="{{ path('home') }}" class="btn absolute top-0 left-0 p-8">
            <i class="fa-solid fa-arrow-left pr-2"></i>
            {{ 'back'|trans({}, 'messages') }}
        </a>

        {{ form_start(registrationForm, {'attr':{'class':'flex justify-center items-center w-full h-full text-center px-2 py-8'}}) }}
        <div class="w-full sm:w-1/2 md:w-1/3 flex flex-col justify-center items-center">
            <div class="w-full flex justify-center items-center mb-10">
                <img class="w-1/4" src="{{asset('assets/img/toukan_orange_text.png')}}">
            </div>

            <div class="w-full px-2">
                {{ form_row(registrationForm.email, {
                    label: 'email'|trans
                }) }}
            </div>
            <div class="w-full flex flex-wrap md:flex-nowrap justify-center items-end">
                <div class="px-2 md:w-1/2 w-full">
                    {{ form_row(registrationForm.name, {
                        label: 'establishment_name'|trans
                    }) }}
                </div>
                <div class="px-2 md:w-1/2 w-full">
                    {{ form_row(registrationForm.type, {
                        label: 'establishment_type'|trans
                    }) }}
                </div>
            </div>
            <div class="w-full px-2">
                {{ form_row(registrationForm.street, {
                    label: 'establishment_address'|trans
                }) }}
            </div>
            <div class="w-full flex flex-wrap md:flex-nowrap justify-center items-end">
                <div class="px-2 md:w-1/2 w-full">
                    {{ form_row(registrationForm.city, {
                        label: 'establishment_city'|trans
                    }) }}
                </div>
                <div class="px-2 md:w-1/2 w-full">
                    {{ form_row(registrationForm.zipcode, {
                        label: 'establishment_zip_code'|trans
                    }) }}
                </div>
            </div>
            <div class="w-full px-2">
                {{ form_row(registrationForm.phone, {
                    label: 'establishment_phone'|trans
                }) }}
            </div>
            <div class="w-full flex flex-wrap md:flex-nowrap justify-center items-end">
                <div class="px-2 md:w-1/2 w-full">
                    {{ form_row(registrationForm.password.first, {
                        label: 'password'|trans,
                        attr:{'class':'form-control text-center border-b-2 border-t-0 border-r-0 border-l-0 border-toukan mb-10 p-2 w-full'}
                    }) }}
                </div>
                <div class="px-2 md:w-1/2 w-full">
                    {{ form_row(registrationForm.password.second, {
                        label: 'password_confirmation'|trans,
                        attr:{'class':'form-control text-center border-b-2 border-t-0 border-r-0 border-l-0 border-toukan mb-10 p-2 w-full'}
                    }) }}
                </div>
            </div>
            <div class="w-full flex justify-center items-end mb-10">
                {{ form_widget(registrationForm.agreeTerms,{
                    attr:{'class':'form-control text-center border-2 border-toukan p-2 m-0 mr-2'}
                }) }}
                {{ form_label(registrationForm.agreeTerms,'accept_terms'|trans,{
                    attr:{'class':'form-control text-center border-2 border-toukan p-2 m-0'}
                    })
                }}
            </div>

            <button type="submit" class="bg-toukan text-white rounded-3xl px-16 py-2 mb-2">{{ 'sign_up'|trans }}</button>

            <a href="{{ path('login') }}" class="underline pt-2 pb-8">
                {{ 'log_in'|trans }}
            </a>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}