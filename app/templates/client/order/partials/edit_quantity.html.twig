    {% set total = 0 %}
    {% for product in order.getProductOrders() %}
        <div id="product-card">
            <a href="{{ path('client_order_basket_product_minus', {'productOrder':product.id, 'establishment':establishment.id, 'table':table.id, 'order':order.id}) }}">-</a>
            {{ product.getQuantity() }}
            <a href="{{ path('client_order_basket_product_plus', {'productOrder':product.id, 'establishment':establishment.id, 'table':table.id, 'order':order.id}) }}">+</a>
            {{ product.getProduct().getTitle() }}
            {% if product.sauce %}
                - sauce {{ product.getSauce().getTitle() }}
            {% endif %}<br>
            = {{ product.getProduct().getPrice() * product.getQuantity() }}€
            <a href="{{ path('client_order_basket_product_delete', {'productOrder':product.id, 'establishment':establishment.id, 'table':table.id, 'order':order.id}) }}">Supprimer</a>
            {% set total = total + product.getProduct().getPrice() * product.getQuantity() %}<br><br>
        </div>
    {% endfor %}
    TOTAL : {{ total }}€
