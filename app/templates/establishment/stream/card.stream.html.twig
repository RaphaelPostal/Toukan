<turbo-stream action="update" target="establishment-card">
    <template>
        {% include 'establishment/partials/card.html.twig' with {'card' : card} %}
    </template>
</turbo-stream>

<turbo-stream action="update" target="form-create-section">
    <template>
        {{ render(controller('App\\Controller\\Establishment\\SectionController::new', {card:card.id})) }}
    </template>
</turbo-stream>
{% if section is defined %}
    <turbo-stream action="update" target="form-edit-section">
        <template>
            {{ render(controller('App\\Controller\\Establishment\\SectionController::edit', {card:card.id, id: section.id})) }}
        </template>
    </turbo-stream>
{% endif %}