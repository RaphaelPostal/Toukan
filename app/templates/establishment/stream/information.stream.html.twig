<turbo-stream action="update" target="establishment-information">
    <template>
        {% include 'establishment/partials/_information.html.twig' with {'establishment' : establishment, 'user' : user} %}
    </template>
</turbo-stream>

{% if app.request.get('_route') == 'app_establishment_information_edit'%}
    <turbo-stream action="update" target="form-edit-establishment-information">
        <template>
            {{ render(controller('App\\Controller\\Establishment\\EstablishmentManageController::editInformation', {establishment: establishment.id})) }}
        </template>
    </turbo-stream>
{% endif %}

{% if app.request.get('_route') == 'app_establishment_password_edit'%}
    <turbo-stream action="update" target="form-edit-establishment-password">
        <template>
            {{ render(controller('App\\Controller\\Establishment\\EstablishmentManageController::editPassword', {user: user.id})) }}
        </template>
    </turbo-stream>
{% endif %}
