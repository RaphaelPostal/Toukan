<turbo-stream action="update" target="establishment-tables">
    <template>
        {% include 'establishment/partials/tables.html.twig' with {'tables' : tables} %}
    </template>
</turbo-stream>

{% if app.request.get('_route') == 'app_table_create' %}
    <turbo-stream action="update" target="form-create-table">
        <template>
            {{ render(controller('App\\Controller\\Establishment\\TableController::new')) }}
        </template>
    </turbo-stream>
{% endif %}

{% if app.request.get('_route') == 'app_table_edit' %}
    <turbo-stream action="update" target="form-edit-table">
        <template>
            {{ render(controller('App\\Controller\\Establishment\\TableController::edit', {'id' : table.id})) }}
        </template>
    </turbo-stream>
{% endif %}